<%- include ../partials/header.ejs %>


<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Survey Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Survey Title"
                    name="name" 
                    value="<%= survey.title %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">questions</label>
                    <input type="text" class="form-control"
                    id="optionATextField"
                    placeholder="Enter the questions"
                    name="optionA" 
                    value="<%= survey.questions %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="authorTextField">answer</label>
                    <input type="text" class="form-control"
                    id="optionBTextField"
                    placeholder="Enter the answer"
                    name="optionB" 
                    value="<%= survey.answer %>"
                    required>
                </div>

                <button class="btn btn-primary" type="button">Add more!</button>
                 <table id="question">

                <head>
                    <script src="http://code.jquery.com/jquery-latest.min.js"></script>
                    </head>
                    <body>
                
                
             
                
                 </table>
                
                  <script>
                
                     $(document).ready(function(){
                
                       $("button").on("click", function(){
                
                         var row = '<tr> <td><input type = "text" class = "form-control"  value="<%= survey.questions %>" placeholder="Enter the question" required></input></td> </tr>';
                
                         $("#question").append(row);
                
                       });
                
                     });
                
                    </script>
                
                    </body>


                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/book-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


